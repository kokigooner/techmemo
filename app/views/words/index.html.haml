.main-content
  .index-container
    - @words.each do |word|
      .word-box
        .word-box__menu
          - if user_signed_in? && current_user.id == word.user_id
            %li
              = link_to '編集', "/words/#{word.id}/edit", method: :get
            %li
              = link_to '削除', "/words/#{word.id}", method: :delete
        .word-box__top
          %p 単語
          = word.word
        .word-box__bottom
          %p 意味を見る
          .word-box__bottom__mean
            = word.mean


