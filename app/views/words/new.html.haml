      = form_for @word do |f|
        .make-content__form__word
          = f.text_area :word, type: "text",
            placeholder: "単語"
        .make-content__form__mean
          = f.text_area :mean, type: "text",
            placeholder: "意味"
        .make-content__form__submit
          = f.submit "作成"
